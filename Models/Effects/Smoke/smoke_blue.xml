<?xml version="1.0"?>

<PropertyList>
	<particlesystem>
		<name>engine-smoke</name>
		<offsets>
			<x-m> -0.3 </x-m>
                        <y-m>  0.0 </y-m>
                        <z-m>  0.0 </z-m>
			<roll-deg>0</roll-deg>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
		<texture>smoke.png</texture>
		
		<condition>
		  <and>
		           <greater-than>
					<property>engines/engine[0]/rpm</property>
					<value>700</value>
			   </greater-than>
			   <equals>
					<property>sim/multiplay/generic/int[11]</property>
					<value>1</value>
			   </equals>
		   </and>
		</condition>
		
		<emissive>false</emissive>
		<lighting>false</lighting>
		<align>billboard</align>
		<attach>world</attach>
		<placer>
			<type>point</type>
		</placer>
		<shooter>
			<theta-min-deg>90</theta-min-deg>
			<theta-max-deg>90</theta-max-deg>
			<phi-min-deg>-2</phi-min-deg>
			<phi-max-deg> 2</phi-max-deg>
			<speed-mps>
				<value>3.2</value>
				<spread>0</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>0</x-min-deg-sec>
				<y-min-deg-sec>0</y-min-deg-sec>
				<z-min-deg-sec>-180</z-min-deg-sec>
				<x-max-deg-sec>0</x-max-deg-sec>
				<y-max-deg-sec>0</y-max-deg-sec>
				<z-max-deg-sec>180</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>20</value>
				<spread>1</spread>
			</particles-per-sec>
		</counter>
		<particle>
			<start>
				<color>
					<red><value>0</value></red>
					<green><value>0</value></green>
					<blue><value>1</value></blue>
					<alpha><value>1</value></alpha>
				</color>
				<size>
					<value>0.3</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>0</value></red>
					<green><value>0</value></green>
					<blue><value>1</value></blue>
					<alpha><value>0</value></alpha>
				</color>
				<size>
					<value>5.0</value>
				</size>
			</end>
			<life-sec>
				<value>15</value>
			</life-sec>
			<mass-kg>0.5</mass-kg>
			<radius-m>0.40</radius-m>
		</particle>
		<program>
			<fluid>air</fluid>
			<gravity>true</gravity>
			<wind>true</wind>
		</program>
	</particlesystem>
</PropertyList>
